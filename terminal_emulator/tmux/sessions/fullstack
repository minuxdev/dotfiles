#!/bin/bash

tmux has-session -t fullstack 2>/dev/null

if [[ $? != 0 ]]
then
  [[ ! -d $1 ]] && (BASE_DIR=$HOME/projects/$1 && mkdir -p $BASE_DIR) ||
    BASE_DIR="$1"
  tmux new-session -s fullstack -c $BASE_DIR \; \
    rename-window 'back' \; \
    new-window \; \
    rename-window 'front' \; \
    new-window \; \
    rename-window 'console' \; \
    split-window -h \; \
    select-window -t 'back' 
else
  tmux attach -t fullstack
fi

