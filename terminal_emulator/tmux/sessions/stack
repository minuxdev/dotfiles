#!/bin/bash

tmux has-session -t stack 2 > /dev/null

if [[ $? != 0 ]]
then
  [[ ! -d $1 ]] && (BASE_DIR=$HOME/projects/$1 && mkdir -p $BASE_DIR) ||
    BASE_DIR="$1"
  tmux new-session -s stack -c $BASE_DIR \; \
    rename-window 'code' \; \
    new-window \; \
    rename-window 'console' \; \
    select-window -t 'code' \;
else 
  tmux attach -t stack
fi

